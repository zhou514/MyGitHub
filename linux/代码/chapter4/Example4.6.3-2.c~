#include <stdio.h>
#include <string.h>
#include <malloc.h>
void sort(char *buf){   //0x00000000 -0xffffffff
        int i,j,len=strlen(buf);
        for(i=0;i<len-1;i++){//排第i个数      
           for(j=i+1;j<len;j++){//和第j个比
              if (buf[i]<buf[j]){
                 buf[i]=buf[i]^buf[j];
                 buf[j]=buf[i]^buf[j];
                 buf[i]=buf[i]^buf[j];                 
              }
           }
        }
    }      
   int main(){
       char *str=(char *)malloc(256); 
       strcpy(str,"ajdsk");
       sort(str);
       printf("%s",str);
    }  

